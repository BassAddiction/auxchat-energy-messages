{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Get conversation messages",
      "method": "GET",
      "path": "/?otherUserId=2",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "messages": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Delete message without messageId",
      "method": "DELETE",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "messageId query param required"
      }
    }
  ]
}